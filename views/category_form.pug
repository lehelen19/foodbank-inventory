extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='category_name') Category Name: 
      input#name.form-control(type='text' placeholder='Category name' name='name' required='true' value=(undefined===category ? '' : category.name) )
      label(for='description') Description: 
      input#description.form-control(type='text' placeholder='Category description' name='description' required='true' value=(undefined===category ? '': category.description) )
    button.btn.btn-primary(type='submit') Submit 
    
    if errors 
      ul 
        for error in errors 
          li!= error.msg