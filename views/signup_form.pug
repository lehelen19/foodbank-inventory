extends layout

block content 
  h1 Sign Up 
  
  form(method='POST' action='')
    div.form-group
      label(for='username') Username: 
      input#username.form-control(type='text' placeholder='username' name='username' required='true' value=(undefined===user ? '' : user.username))
    div.form-group
      label(for='password') Password: 
      input#password.form-control(type='password' placeholder='password' name='password' required='true' value=(undefined===user ? '' : user.password))
    div.form-group
      label(for='secret') Employee Secret: 
      input#secret.form-control(type='password' placeholder='secret' name='secret' required='true' value=(undefined===user ? '' : user.secret))
    button.btn.btn-primary(type='submit') Sign Up

    if errors 
      ul 
        for error in errors 
          li!= error.msg